<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="4"
    tools:context="com.dhanuka.morningparcel.activity.LocationSelectionAcitivityNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center_vertical"


        android:background="@color/white">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="?actionBarSize"
            android:padding="15dp"
            android:layout_height="?actionBarSize"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />

        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:paddingLeft="10dp"
        android:text="Let Us Know"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/llcountry"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="3"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Your Location"

                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spinnerCountry"
            android:layout_width="match_parent"
            android:background="@color/white"

            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCity"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:paddingLeft="10dp"
            android:text="Your City"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/llbanner"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bannerimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.5"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:src="@drawable/imagecntry"/>
        <TextView
            android:id="@+id/bannertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Shop at your convenience"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>





</LinearLayout>