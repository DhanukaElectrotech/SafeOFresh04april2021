<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/round_up_bottomsheet"

        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"

            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/selectdelivtxt"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/black3"

                android:layout_marginRight="30dp"
                android:layout_weight="2"
                android:text="Select Delivery Address"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/addnewadd"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.7"

                android:textColor="#e1ad01"
                android:textSize="13sp"
                android:drawablePadding="@dimen/margin5dp"
                android:drawableLeft="@drawable/ic_add"
                android:text="Add New"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#efefef"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saveaddcontainer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"

            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:backgroundTint="@color/black3"
                android:src="@drawable/ic_search"

                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/selectlocation"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:layout_weight="2"
                android:text="Enter Location Manually"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:visibility="gone"

            android:layout_margin="10dp"
            android:background="@drawable/filledbtn"
            android:text="@string/proceed"
            android:textColor="@color/white" />







    </LinearLayout>

</RelativeLayout>