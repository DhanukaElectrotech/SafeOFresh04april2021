<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:minHeight="250dp"

    android:background="@drawable/round_up_bottomsheet"

    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="70dp"

            android:layout_height="wrap_content"
            android:background="@drawable/round_up_bottomsheet">



            <ImageView
                android:id="@+id/ivProductbt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_image" />
            <TextView
                android:id="@+id/tvOffbt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="-50dp"
                android:background="@drawable/red_circle"
                android:text=""
                android:gravity="center"
                android:layout_toStartOf="@+id/ivProductbt"
                android:textAllCaps="true"

                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNamebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/ivDelete"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ivProductbt"
                android:text="Product Name"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPricebt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNamebt"
                android:layout_alignLeft="@+id/tvNamebt"
                android:layout_marginTop="@dimen/margin5dp"
                android:layout_toLeftOf="@+id/ivDelete"
                android:text="OLD PRICE"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvsalebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/ivDelete"
                android:layout_below="@+id/tvNamebt"
                android:layout_alignLeft="@+id/tvNamebt"
                android:layout_marginTop="@dimen/margin5dp"
                android:text="OLD PRICE"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvSavebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/tvNamebt"
                android:layout_alignLeft="@+id/tvNamebt"
                android:gravity="center"
                android:text="Save hello"
                android:textAllCaps="true"

                android:textColor="@color/red_star"
                android:textSize="10sp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/tempricetxtbt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="-3dp"
                android:layout_below="@id/tvSavebt"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Item Price"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/tempricetxtbt"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content">

                <ru.softbalance.widgets.NumberEditText
                    android:id="@+id/tvQtybt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="44dp"
                    android:layout_toLeftOf="@+id/btnAddToCart"
                    android:background="@drawable/bg_spinner_blue_new"
                    android:hint="Enter item price"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <Button
                    android:id="@+id/submitbtnbt"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:text="Submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />
            </RelativeLayout>


        </RelativeLayout>





</LinearLayout>