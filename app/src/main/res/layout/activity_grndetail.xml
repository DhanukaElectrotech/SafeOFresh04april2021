<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dhanuka.morningparcel.activity.retail.GRNDetail">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_actionbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@mipmap/backbtn"
            android:gravity="center|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:onClick="onBackClick"
            android:text="Back"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rgSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checkedButton="@id/rbBarcode"
                    android:minHeight="44dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/rbBarcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="44dp"
                        android:text="Barcode" />

                    <RadioButton
                        android:id="@+id/rbItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="44dp"
                        android:text="Item Name" />

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp">

                        <com.dhanuka.morningparcel.activity.retail.CustomAutoCompleteView
                            android:id="@+id/et_ItemBarcode"
                            android:layout_width="356dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="bottom"
                            android:hint="Item Barcode"

                            android:maxLength="20"

                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/work_order_hint">

                        </com.dhanuka.morningparcel.activity.retail.CustomAutoCompleteView>


                        <ImageView
                            android:id="@+id/searchmanualbarid"
                            android:layout_width="61dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right"

                            android:layout_marginRight="60dp"
                            android:padding="20dp"

                            android:layout_marginBottom="3dp"
                            android:src="@drawable/ic_search_black_24dp" />
                        <ImageView
                            android:id="@+id/iv_ItemBarcode"
                            android:layout_width="61dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right|bottom"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="3dp"
                            android:onClick="codeScanner1"
                            android:src="@drawable/bar_code" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_item_IDs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:hint="Item ID"
                        android:inputType="textCapWords"
                        android:paddingBottom="-5dp"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:met_floatingLabel="highlight" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp">

                        <com.dhanuka.morningparcel.customViews.DelayAutoCompleteTextView
                            android:id="@+id/et_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:imeOptions="actionNext"
                            android:hint="Item Name"
                            android:inputType="textCapWords"
                            android:paddingBottom="-5dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            app:met_floatingLabel="highlight"
                            android:scrollHorizontally="true"
                            android:singleLine="true" />
                        <ProgressBar
                            android:id="@+id/pb_loading_indicator"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="60dp"
                            android:visibility="gone" />

                        <!--
                                                <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                                                    android:id="@+id/et_item_name"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginRight="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:gravity="bottom"
                                                    android:hint="Item Name"
                                                    android:inputType="textCapWords"
                                                    android:paddingBottom="-5dp"
                                                    android:textSize="15sp"
                                                    app:met_floatingLabel="highlight" />
                        -->
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray2" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_updateData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_Qty"
                                android:layout_width="171dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:digits="0123456789."
                                android:gravity="bottom"
                                android:hint="Qty"
                                android:inputType="numberDecimal"

                                android:maxLength="20"
                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <Spinner
                                android:id="@+id/spnr_exphead"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="10dp"
                                android:entries="@array/arr_qty_type"
                                android:hint="Exp Head"
                                android:minHeight="50dp"
                                android:visibility="gone" />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_BaseAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:digits="0123456789."
                                android:gravity="bottom"
                                android:hint="Base Amount"
                                android:inputType="numberDecimal"

                                android:maxLength="20"
                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>

                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/attendance_list"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_HSN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:hint="HSN code"
                                android:maxLength="20"

                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_MRP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:digits="0123456789."
                                android:gravity="bottom"
                                android:hint="MRP"
                                android:inputType="numberDecimal"

                                android:maxLength="20"
                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_TAX"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:hint="Tax %"
                                android:maxLength="20"

                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_TAX1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:hint="Tax Amount"
                                android:maxLength="20"

                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_CESS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:hint="Cess %"
                                android:maxLength="20"
                                android:text="0.0"


                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_CESS1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:hint="Cess Amt."
                                android:maxLength="20"
                                android:text="0.0"

                                android:minHeight="50dp"
                                android:paddingBottom="-3dp"
                                android:singleLine="true"
                                android:textColor="@color/work_order_hint"
                                app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_manufacturingdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Manufacturing Date"
                        android:paddingBottom="-5dp"
                        app:met_floatingLabel="normal" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/ic_date_wo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:hint="Comment"
                        android:maxLength="200"
                        android:paddingBottom="-3dp"
                        android:singleLine="true"
                        android:textColor="@color/work_order_hint"
                        app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"         android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_camera"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/wo_camera" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin5dp"
                        android:text="Attach Images"

                        android:textColor="@color/black2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/payment_border"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imagepick" />


                        <ImageView
                            android:id="@+id/imagepick"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@mipmap/wo_camera" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_BoxBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="bottom"
                            android:hint="Box Barcode"
                            android:maxLength="20"
                            android:paddingBottom="-3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/work_order_hint"
                            app:met_floatingLabel="highlight"></com.rengwuxian.materialedittext.MaterialEditText>

                        <ImageView
                            android:id="@+id/iv_BoxBarcode"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="3dp"
                            android:onClick="codeScanner"
                            android:src="@drawable/bar_code" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/work_order_theme_color"
                    android:clickable="true"
                    android:text="CANCEL"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"></View>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/work_order_theme_color"
                    android:clickable="true"
                    android:text="SAVE"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_submit_Master"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
