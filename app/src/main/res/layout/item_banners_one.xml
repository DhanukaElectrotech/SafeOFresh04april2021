<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card"
        android:background="@drawable/m_border_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/image"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No-contact Delivery"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_maroon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have your order dropped off at your door or gate for added safty"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/color_maroonon" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/dlvrybg" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card1"
        android:background="@drawable/m_border_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/image1"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Safty Standards"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#46C103" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our restaurant partners are following best safty rules"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#2B6C08" />

        </LinearLayout>
<!--
9ED580
-->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:layout_marginTop="10dp"
             android:padding="10dp"
            android:src="@drawable/cvdsft" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card2"
        android:background="@drawable/m_border_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/image2"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Best Safty Standards"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#CD1214" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our restaurant partners are following best safty rules"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#AF5354" />

        </LinearLayout>
<!--

-->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/dlvryby" />


    </RelativeLayout>

</LinearLayout>