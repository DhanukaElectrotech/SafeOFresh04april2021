<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.dhanuka.morningparcel.activity.WalleTransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/backbtnicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:onClick="makeBackClick"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:text="Safe'O'Fresh"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Money to Safe'O'Fresh Wallet"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/txtWalletAmt"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Available Balance    ₹146.00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/payment_border"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="₹"
                        android:textSize="18pt" />

                    <EditText
                        android:id="@+id/amounttxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="Amount"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="15pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/payment_border"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="₹"
                        android:textSize="18pt" />

                    <EditText
                        android:id="@+id/commenttxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="Commnet"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="15pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llRs100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:background="@drawable/round_country_circle_new"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:lines="1"
                                android:minWidth="90dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="+1000"
                                android:textColor="#6c6c6c"
                                android:textSize="9pt" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRs200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:background="@drawable/round_country_circle_new"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:lines="1"
                                android:minWidth="90dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="+3000"
                                android:textColor="#6c6c6c"
                                android:textSize="9pt" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRs500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:background="@drawable/round_country_circle_new"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:lines="1"
                                android:minWidth="90dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="+5000"
                                android:textColor="#6c6c6c"
                                android:textSize="9pt" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRs1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:background="@drawable/round_country_circle_new"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:lines="1"
                                android:minWidth="90dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="+10000"
                                android:textColor="#6c6c6c"
                                android:textSize="9pt" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="25dp"
                android:tint="@color/colorAccent"
                android:layout_height="25dp"
                android:src="@drawable/wallet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:text="Money will be added to "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe'O'Fresh Wallet"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/addamountbtn"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:textStyle="bold"

            />
    </LinearLayout>


</LinearLayout>