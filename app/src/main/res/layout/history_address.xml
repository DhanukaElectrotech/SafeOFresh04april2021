<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"

    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:minHeight="80dp"


        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/historyimage"
            android:layout_width="30dp"
            android:padding="@dimen/margin3dp"
            android:layout_marginLeft="5dp"


            android:src="@drawable/markerrest"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/margin5dp"
            android:minHeight="30dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cityname"
                android:layout_width="match_parent"
                android:text="Home"

                android:textColor="#d47415"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"


                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/completeaddress"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:maxLength="90"
                android:text="802 Sovereign 4,Vatika city,Crimson West..."
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#efefef"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="#efefef"
        />


</LinearLayout>