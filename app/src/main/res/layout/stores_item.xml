<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/llclr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/shopbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorAccent"
            android:buttonTint="@color/colorAccent"
            android:drawableTint="@color/colorAccent"
            android:visibility="invisible" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="5.0dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border_status"
                     android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5.0dip"
               >

                    <ImageView
                        android:id="@+id/shopImg"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/restaurents" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                 android:orientation="vertical"
              >

                <TextView

                    android:id="@+id/shoptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="4.0dip"
                     android:gravity="center_vertical"
                    android:maxLines="2"


                    android:text="Indian store-Atlanta"
                     android:textColor="@color/black2"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="4.0dip"
                    android:maxLines="2"
                     android:gravity="center_vertical"
                    android:text="Gurgaon"
                    android:id="@+id/txtCity"
                     android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:id="@+id/txtDistance"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="4.0dip"
                    android:maxLines="2"
                     android:gravity="center_vertical"
                    android:text="1kms"
                     android:textAllCaps="true"
                     android:textStyle="bold" />

            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--
                <TextView
                    android:id="@+id/shoptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingLeft="35dp"
                    android:textSize="14sp"
                    android:text="Vardhmaan Genral Store"
                    android:textColor="@color/black3"
                    />
        -->

    </RelativeLayout>

</LinearLayout>