<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sortpopid"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:gravity="bottom"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Canelsort"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/closeHeader"
                android:visibility="visible">


                <TextView
                    android:id="@+id/vehicle_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"

                    android:paddingTop="1.0dip"
                    android:paddingEnd="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="1.0dip"
                    android:text="Assign Order"
                    android:textColor="@color/white"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageView
                android:id="@+id/closeHeader"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:padding="13dp"
                android:src="@drawable/ic_light"
                android:text="x"
                android:tint="@color/white" />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/payment_border"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spBoys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageScan"
            android:hint="Barcode"
            android:minHeight="50dp"
            android:padding="5dp"
            android:singleLine="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attach Images(Optional)"
        android:layout_margin="@dimen/margin5dp"

        android:textColor="@color/black2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"

android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

  <EditText
      android:layout_width="match_parent"
      android:background="@drawable/payment_border"
      android:layout_height="wrap_content"
      android:id="@+id/edtComment"
      android:gravity="start"
      android:padding="10dp"
      android:maxLines="4"
      android:minLines="4"
      android:minHeight="100dp"
      android:hint="Additional Message(optional)"/>

    </RelativeLayout>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</LinearLayout>


