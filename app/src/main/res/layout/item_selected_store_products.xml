<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/topL"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="100dp"
                    android:layout_height="110dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />


                <TextView
                    android:id="@+id/tvBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="120dp"
                    android:layout_marginRight="-50dp"
                    android:gravity="start"
                    android:text="1234567890"
                    android:textAllCaps="true"

                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/btnReduce"
                    android:layout_toRightOf="@+id/ivProduct"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Product Name"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/qtyL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tvName"
                    android:layout_alignLeft="@+id/tvName">

                    <TextView
                        android:id="@+id/tvOriginalPrice2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:layout_weight="0.9"
                        android:text="SKU : "
                        android:textAllCaps="true"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qtyL"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/ivProduct"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOriginalPrice1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"

                        android:text="OLD PRICE"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvOriginalPrice"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:paddingLeft="10dp"
                        android:text="OLD PRICE"

                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PL"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"


                    android:layout_toRightOf="@+id/ivProduct"

                    android:gravity="center"
                    android:text="Save off"
                    android:textAllCaps="true"

                    android:textColor="@color/red_star"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/sttsL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSave"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/ivProduct">

                    <TextView
                        android:id="@+id/tvQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:layout_weight="0.9"
                        android:text="SKU : HSKJKDKJHD"
                        android:textAllCaps="true"
                        android:textSize="12sp" />

                </LinearLayout>


            </RelativeLayout>







        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>