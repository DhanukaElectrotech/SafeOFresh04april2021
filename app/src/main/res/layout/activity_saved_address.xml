<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"

        android:background="@color/app_color"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"

            android:padding="@dimen/margin3dp"

            android:src="@drawable/locationlogowhite"
            android:layout_gravity="center"

            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cityname"
                android:layout_width="0dp"
                android:text="Device Location Turned Off"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_vertical"


                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/chooseadd"
                android:layout_width="0dp"
                android:text="Turn On"

                android:background="@drawable/whitefilledback"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_weight="0.8"
                android:textSize="17sp"
                android:gravity="center"

                android:layout_height="35dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#efefef"/>

        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saveaddcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>