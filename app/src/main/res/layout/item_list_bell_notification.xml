<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/vehicleinfoCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:background="@drawable/rounded_inner_transparent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2.0dip">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:textColor="@color/Base_color"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Notification"/>

            <TextView
                android:id="@+id/txt_datetime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:textColor="@color/darkblue"
                android:textSize="13sp"
                android:text="date"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rounded_inner_driverlist_boarder"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/imageviewmarker"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-87dp"
                android:background="@drawable/new_round_shape"
                android:orientation="vertical"
                android:padding="10dp" />

            <TextView
                android:id="@+id/txt_notimsg"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:lineSpacingExtra="3dp"
                android:text="Whenever you want to send values only to particular platforms, don't use common fields; use platform-specific fields. For example, to send a notification only to iOS and web but not to Android, you must use two separate sets of fields, one for iOS and one for web."
                android:textSize="13sp"
                android:textColor="@color/darkblue"/>

        </LinearLayout>





    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/white"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="2.0dip"/>





</LinearLayout>