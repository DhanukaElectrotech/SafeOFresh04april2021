<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sortpopid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Canelsort"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"

                android:visibility="visible">


                <TextView
                    android:id="@+id/vehicle_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingTop="1.0dip"
                    android:paddingEnd="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="1.0dip"
                    android:text="Filter By "
                    android:textColor="@color/white"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageView
                android:id="@+id/closeHeader"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15.0dip"
                android:background="@color/colorAccent"
                android:padding="13dp"
                android:src="@drawable/ic_light"
                android:text="x"
                android:textSize="18.0dip"
                android:tint="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:weightSum="5">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:src="@drawable/ic_whatshot_black_24dp" />

        <TextView
            android:id="@+id/daternge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4.8"
            android:gravity="center_vertical"
            android:text="Date Range"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="#676767" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:weightSum="5">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:src="@drawable/ic_timer_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4.8"
            android:gravity="center_vertical"
            android:text="Sort By Status"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />


    </LinearLayout>

    <RadioGroup
        android:layout_marginLeft="30dp"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:minWidth="400dp"
        android:visibility="gone"
        android:checkedButton="@id/rbP"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="match_parent"
android:gravity="center_vertical"
                android:layout_height="wrap_content"
            android:text="All" />

        <RadioButton
            android:id="@+id/rbH"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Hold" />
        <RadioButton
            android:id="@+id/rbP"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Pending" />

        <RadioButton
            android:id="@+id/rbC"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />


         <RadioButton
            android:id="@+id/rbCm"
             android:gravity="center_vertical"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered" />

    </RadioGroup>

    <RadioGroup
        android:layout_marginLeft="30dp"
        android:id="@+id/rbnew"
        android:layout_width="match_parent"
        android:minWidth="400dp"
        android:checkedButton="@id/rbP"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rball1"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="All" />

        <RadioButton
            android:id="@+id/rbordrrec"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Order Received" />
        <RadioButton
            android:id="@+id/rbaccpt"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Accepted" />

        <RadioButton
            android:id="@+id/rbouteliver"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Out for Delivery" />


        <RadioButton
            android:id="@+id/rbdeliver"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered" />
        <RadioButton
            android:id="@+id/rbpending"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending" />

        <RadioButton
            android:id="@+id/rbpacked"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Packed" />

        <RadioButton
            android:id="@+id/rbready"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready For Delivery" />

        <RadioButton
            android:id="@+id/rbcancel"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</LinearLayout>


