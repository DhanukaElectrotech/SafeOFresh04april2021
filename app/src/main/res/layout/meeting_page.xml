<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/app_color"
            android:layout_height="?actionBarSize">
            <ImageView
                android:id="@+id/bctbtn"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:tint="@color/white"
                android:padding="8dp"

                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Meeting Summary"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@color/app_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_companyname"
                            style="@style/EditTextStyle"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="Company Name"
                            android:selectAllOnFocus="true"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/et_companyadd"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:hint="Company Address"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="textMultiLine"
                            android:selectAllOnFocus="true"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_personname"
                            style="@style/EditTextStyle"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:hint="Meeting Person Name"
                            android:selectAllOnFocus="true"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/camera1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camera_pressed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textColor="#808080"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="-20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_phone1"
                            style="@style/EditTextStyle"
                            android:hint="Phone No."
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:selectAllOnFocus="true"
                            android:maxLength="10"
                            android:inputType="number"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_designation1"
                            style="@style/EditTextStyle"
                            android:hint="Designation"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_email"
                            style="@style/EditTextStyle"
                            android:hint="Email Id"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/rvImagescollectmeet"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@color/app_color">



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color"
                        android:textSize="15sp"
                        android:onClick="on_add"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="7dp"
                        android:text="Add decision maker detail"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:onClick="on_add"
                        android:background="#0288d1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_add_white"/>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_page"
                android:visibility="gone"
                android:background="#efefef"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:id="@+id/et_decisionmaker"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="15sp"
                                android:hint="Decision maker person name"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:id="@+id/et_phone2"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:hint="Phone No."
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:selectAllOnFocus="true"
                                android:inputType="number"
                                android:maxLength="10"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">



                        <ImageView
                            android:id="@+id/photo2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/camera_pressed"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photo"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="#808080"/>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_destination2"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:hint="Designation"
                                android:singleLine="true"
                                android:textSize="15sp"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="8dp" />


                            <!--                    <EditText-->
                            <!--                    android:id="@+id/et_reason"-->
                            <!--                    style="@style/EditTextStyle"-->
                            <!--                    android:layout_height="wrap_content"-->
                            <!--                    android:hint="Reason"-->
                            <!--                    android:textSize="15sp"-->
                            <!--                    android:selectAllOnFocus="true"-->
                            <!--                    android:inputType="textEmailAddress"-->
                            <!--                     />-->
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="#bcbcbc"/>

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_visit_tm"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:hint="Visit time"
                                android:onClick="visit_tm"
                                android:clickable="true"
                                android:drawableRight="@drawable/ic_time"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="8dp" />


                            <!--                    <EditText-->
                            <!--                        android:id="@+id/et_productoffering"-->
                            <!--                        style="@style/EditTextStyle"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:hint="Product offering"-->
                            <!--                        android:inputType="textEmailAddress"-->
                            <!--                        android:selectAllOnFocus="true"-->
                            <!--                        android:textSize="15sp"-->
                            <!--                         />-->
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_height="0.7dp"
                            android:background="#bcbcbc"/>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_comment"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:hint="Comment"
                                android:textSize="15sp"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/camera2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/photo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@mipmap/camera_pressed"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/app_color">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color"
                        android:textSize="15sp"
                        android:onClick="on_followbtn"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="7dp"
                        android:text="Add followup details"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:onClick="on_followbtn"
                        android:background="#0288d1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_add_white"/>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/add_follow"
                android:background="#efefef"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_followdt"
                                style="@style/EditTextStyle"
                                android:onClick="on_followdt"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:drawableRight="@drawable/ic_date"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Next follow up date"
                                android:singleLine="true"
                                android:textSize="15sp"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_followcmt"
                                style="@style/EditTextStyle"
                                android:layout_height="wrap_content"
                                android:hint="Followup comment"
                                android:textSize="15sp"
                                android:selectAllOnFocus="true"
                                android:inputType="textEmailAddress"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@color/app_color"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="Cancel"/>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@color/app_color"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginLeft="40dp"
                    android:text="Save"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
