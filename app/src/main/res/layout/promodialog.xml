<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tpL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Base_color">

        <ImageView
            android:id="@+id/imgBackBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back_icon" />

        <TextView

            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="7dp"
            android:text="Promo Code"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5dp"
        android:orientation="vertical">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/promocontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <RadioGroup
            android:id="@+id/deliverytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/homedelivr"
            android:visibility="gone">

            <RadioButton

                android:id="@+id/homedelivr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Delivery" />

            <RadioButton
                android:id="@+id/loby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lobby Delivery" />

            <RadioButton
                android:id="@+id/selfpickr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Self Pickup" />
        </RadioGroup>

    </LinearLayout>

</LinearLayout>